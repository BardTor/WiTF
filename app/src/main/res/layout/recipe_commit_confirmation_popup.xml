<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout
            android:padding="23dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/vegan_secondary">

            <TextView
                android:id="@+id/text_alert"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/radius_recipe_top"
                android:padding="15dp"
                android:textSize="17sp"
                android:text= "Have you used the recipe?"/>


            <Button
                android:id="@+id/confirmation_yes_button_ra"
                android:text="@string/yes_text"
                android:background="@drawable/radius_recipe_top"
                android:layout_marginTop="60dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


            <Button
                android:id="@+id/confirmation_no_button_ra"
                android:text="@string/no_text"
                android:background="@drawable/radius_recipe_top"

                android:layout_marginTop="60dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"/>



        </RelativeLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>